@model IEnumerable<Edstart.Models.Investment>
@{
    ViewBag.Title = "Dashboard";
}
<style>
    table tr td, table tr th {
        padding: 7px;
    }
</style>
<h2>Dashboard</h2>
<table>
    <tr>
        <th>Investor Name</th>
        <th>Bid Amount</th>
        <th>Bid Rate</th>
        <th>Amount have to pay</th>
        <th>Account Name</th>
        <th>Account Number</th>
    </tr>
    @if (Model.Any())
    {
        foreach (var investment in Model)
        {
            <tr>
                <td>@(investment.Investor.FirstName + " " + investment.Investor.LastName)</td>
                <td>@(investment.BidAmount)</td>
                <td>@investment.BidRate</td>
                <td>@(investment.BidAmount + (investment.BidAmount * investment.BidRate / 100))</td>
                <td>@(investment.Investor.AccountName)</td>
                <td>@(investment.Investor.AccountNumber)</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">Your loan still incomplete</td>
            
        </tr>
    }
    
</table>


